/* pages/avatar/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.user-info{
  width: 100%;
  background-color: #fff;
  padding: 30rpx 0;
}
.user-img{
  margin: 20rpx auto;
  width: 180rpx;
  height: 180rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, .2);
  border-radius: 50%;
  overflow: hidden;
}
.user-img image{
  width: 100%;
  height: 100%;
}
.user-name{
  margin: 0 auto;
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
}
.mywallet{
  position: relative;
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  font-size: 28rpx;
}
.mywallet .wallet{
  position: absolute;
  right: 30rpx;
  font-weight: bold;
}
.footer{
  position: absolute;
  bottom: 30rpx;
  width: 100%;
}
.footer .btn{
  width: 90%;
  margin: 0 auto;  
  color: #fff;
}
.footer .loginbtn{
  background-color: rgb(32, 175, 32);
}
.footer .outbtn{
  background-color: rgb(235, 19, 19);
}

